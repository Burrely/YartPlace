    
@{
    ViewBag.Title = "LoginLanding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col-md-5">

                <h2>Login</h2>

                <div class="primary-panel col-md-12">
                    <p>
                        Login with your arranged account.
                    </p>

                    <p class="text-muted">
                        This version of the application doesn't support registering an account yet. You need to use a pre-arranged account.
                    </p>

                    <form>
                        <label>email address</label>
                        <input class="col-md-12" type="text" />

                        <label>Password</label>
                        <input class="col-md-12" type="password" />

                        <input class="col-md-12 btn btn-primary" type="submit" />
                    </form>
                    <p>
                        Of login met Google.
                    </p>
                    <div class="g-signin2" data-onsuccess="onSignIn"></div>
                    <a href="#" onclick="signOut();">Sign out</a>
                </div>

            </div>
        </div>
    </div>

</main>